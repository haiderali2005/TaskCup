@model TaskCup.Models.Adminauth

@{
    ViewData["Title"] = "Update Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Update Profile</h3>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateProfile" method="post">
                        <div class="mb-3">
                            <label asp-for="A_Username" class="form-label"></label>
                            <input asp-for="A_Username" class="form-control" required />
                            <span asp-validation-for="A_Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="A_Email" class="form-label"></label>
                            <input asp-for="A_Email" class="form-control" required />
                            <span asp-validation-for="A_Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="A_Password" class="form-label"></label>
                            <input asp-for="A_Password" type="password" class="form-control" required />
                            <span asp-validation-for="A_Password" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="A_Id" />

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
