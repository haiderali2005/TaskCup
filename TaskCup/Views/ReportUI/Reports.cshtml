@{
    ViewData["Title"] = "Task Progress Report";
    Layout = "~/Views/Shared/_useruibackup.cshtml";
}

@model IEnumerable<TaskCup.Models.TaskProgressReportViewModel>;

<main id="home2">
    <!-- Hero Section -->
    <section class="hero3 py-5 text-center" id="hero">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col d-flex justify-content-center align-items-center flex-column">
                    <h1 class="text-white display-4 font-weight-bold">Your Report</h1>
                    <p class="text-white lead mt-3">An overview of your task progress at a glance.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <div class="container mt-5">
        <h1 class="section-heading text-center justify-content-center d-flex align-content-center">Task Progress Report</h1>
        <div class="card shadow-lg border-0">
            <div class="card-body p-4">
                @if (Model.Count() == 0)
                {
                    <div class="text-center my-5">
                        <h2 class="text-uppercase text-muted fw-bold">No Reports Available</h2>
                        <p class="text-secondary mt-3" style="font-size: 1.2rem;">Keep moving forward your next achievement is just around the corner.</p>
                    </div>
                }
                else
                {
                    <table class="table table-hover table-bordered text-center">
                        <thead>
                            <tr class="bg-gold text-dark">
                                <th>Status</th>
                                <th>Task Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Status</td>
                                    <td>@item.TaskCount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                } 
            </div>
        </div>
    </div>
</main>

<style>
    .section-heading {
        font-size: 2.5rem;
        color: #343a40;
        font-weight: 700;
        margin-bottom: 1.5rem;
        position: relative;
        display: inline-block;
        padding-bottom: 0.5rem;
    }

        .section-heading::after {
            content: '';
            display: block;
            height: 4px;
            width: 60px;
            position: absolute;
            bottom: 0;
            left: 0;
        }
    .hero3 .display-4 {
        font-size: 3rem;
        font-weight: 700;
    }

    .hero3 .lead {
        font-size: 1.25rem;
        font-weight: 300;
    }

    /* Table Styling */
    .table {
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .table thead th {
        background-color: #ffd700;
        color: #000;
        font-weight: 600;
        text-transform: uppercase;
    }

    .table tbody td {
        vertical-align: middle;
        font-size: 1.1rem;
    }

    /* Card Styling */
    .card {
        border-radius: 1rem;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 2rem;
    }

    /* Buttons and General Styling */
    .btn-primary {
        background-color: #ffd700;
        border-color: #ffd700;
        font-weight: 600;
        color: #000;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #ffffff;
        font-weight: 500;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }

    /* Responsive Design */
    @@media (max-width: 767px) {
        .hero3 .display-4 {
            font-size: 2.5rem;
        }

        .hero3 .lead {
            font-size: 1rem;
        }
    }

    /* Custom Colors */
    .bg-gold {
        background-color: #ffd700;
    }
</style>
