@{
    Layout = null;
}
@if (TempData["forgot2"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@TempData["forgot2"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="Description" content="Enter your description here"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <title>Login</title>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            overflow: hidden;
            margin: 0;
            padding: 0;
        }

        .gradient-custom {
            position: relative;
            height: 100vh;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .gradient-custom::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 10%, transparent 10%);
            background-size: 50px 50px;
            animation: animate 20s linear infinite;
            z-index: 0;
        }

        @@keyframes animate {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }

        .card {
            position: relative;
            z-index: 1;
            border-radius: 1rem;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.1);
            border: none;
            color: #fff;
            padding: 15px;
            font-size: 18px; /* Increased text size */
            border-radius: 8px;
            box-shadow: inset 2px 2px 5px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7); /* Lighter placeholder color */
        }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.2);
            border-color: #6a11cb;
            box-shadow: 0 0 10px rgba(106, 17, 203, 0.5);
        }

        .btn-outline-light {
            border-radius: 30px;
            padding: 10px 30px;
            font-size: 18px;
            text-transform: uppercase;
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
        }

        .btn-outline-light::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(to right, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.1));
            transition: all 0.4s ease;
        }

        .btn-outline-light:hover::before {
            left: 100%;
        }

        .btn-outline-light:hover {
            color: #2575fc;
            background-color: #fff;
            box-shadow: 0 5px 15px rgba(255, 255, 255, 0.5);
        }

        .text-white-50:hover {
            color: #fff;
            text-decoration: underline;
        }

        .text-uppercase {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
            letter-spacing: 1.5px;
        }

        .small a {
            color: #ffb703;
            transition: color 0.3s ease;
        }

        .small a:hover {
            color: #ffb703;
            text-decoration: none;
        }

        .text-white-50 {
            transition: color 0.3s ease;
        }

    </style>
</head>
<body>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="text-uppercase">Forgot Password</h2>
                                <p class="text-white-50 mb-5">Forgot your password? Reset it here and get back on track!</p>
                                <form method="post">
                                    <div class="form-outline form-white mb-4">
                                        <input type="email" required name="U_Email" id="typeEmailX" class="form-control form-control-lg" placeholder="Email" />
                                        <label class="form-label" for="typeEmailX">Email</label>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input type="password" required name="U_Password" id="typePasswordX" class="form-control form-control-lg" placeholder="Password" />
                                        <label class="form-label" for="typePasswordX">Password</label>
                                    </div>
                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Save Changes</button>
                                </form>
                            </div>
                            <div>
                                <p class="mb-0">Don't have an account? <a asp-action="Register" asp-controller="User" class="text-white-50 fw-bold">Sign Up</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.0/js/bootstrap.min.js"></script>
</body>
</html>
