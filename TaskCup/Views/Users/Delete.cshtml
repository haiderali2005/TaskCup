@model TaskCup.Models.Userauth

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-trash-alt me-2"></i>Delete User
                    </h3>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Are you sure you want to delete this user?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.U_Username)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.U_Username)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.U_Email)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.U_Email)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.U_Password)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.U_Password)
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="U_Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-1"></i>Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
