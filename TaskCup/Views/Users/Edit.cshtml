@model TaskCup.Models.Userauth

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i>Edit User
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="U_Id" />
                        <div class="form-group mb-3">
                            <label asp-for="U_Username" class="form-label"></label>
                            <input asp-for="U_Username" class="form-control" required />
                            <span asp-validation-for="U_Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="U_Email" class="form-label"></label>
                            <input asp-for="U_Email" class="form-control" required />
                            <span asp-validation-for="U_Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="U_Password" class="form-label"></label>
                            <input asp-for="U_Password" type="password" class="form-control" required />
                            <span asp-validation-for="U_Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
